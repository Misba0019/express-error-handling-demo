    <%- include('partials/layout.ejs', { title: 'Product Factory' }) %>
 
    <h1 class="ms-2"><i>
            <%= category %> Products!
        </i> </h1>
    <table class="table table-striped table-bordered mt-3 ">
        <thead></thead>
        <tr>
            <th> Name </th>
            <th> Price </th>
        </tr>
        </thead>
        <tbody>
        <% for (let product of products) { %>
            <tr>
                <td> <a href="/products/<%= product._id %>"><%= product.name %></a> </td>
                <td><%= product.price %></td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <br>
    <a class="ms-1 btn btn-primary" href="/products/new">Add Product</a>
    <br>
    <%if(category !=='All' ){ %>
        <a class="ms-2 mt-2" href="/products">All Products</a>
        <% } %>

</body>

</html>